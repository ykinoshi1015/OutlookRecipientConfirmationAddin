<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load" loadImage="LoadImage">
  <ribbon>

    <tabs>

      <!--ホームタブにボタン設置-->
      <tab idMso="TabMail">
        <group id="RecipientList1" label="宛先リスト" autoScale="true">
          <button id="RecipientListButton1" label="宛先確認" imageMso="ContactProperties" size="large" onAction="RecipientListButton_Click"/>
        </group>
        <group id="ReplayWithAttachments_Home" insertBeforeMso="GroupMailRespond" label="返信(添付あり)" autoScale="true">
          <button id="ReplayWithAttachmentsButton_Home" label="返信" image="Reply.png" size="large" onAction="ReplayWithAttachments_Click"/>
          <button id="ReplayAllWithAttachmentsButton_Home" label="全員に返信" image="ReplyAll.png" size="large" onAction="ReplayAllWithAttachments_Click"/>
        </group>
      </tab>

      <!--新ウィンドウでメールを編集する時のメッセージタブにボタン設置
      「新しい電子メール」を選択時に、親ウィンドウで選択中の宛先リストが表示されるので、ひとまず保留
      コメントアウトで、下書きや削除済みアイテムをダブルクリックしたときにボタンが出なくなる
      <tab idMso="TabNewMailMessage">
        <group id="RecipientList2" label="宛先リスト" autoScale="true">
          <button id="RecipientListButton2" label="宛先確認" imageMso="ContactProperties" size="large"
                  onAction="RecipientListButton_Click"/>
        </group>
      </tab> -->

      <!--新ウィンドウでメールを見る時のメッセージタブにボタン設置-->
      <tab idMso="TabReadMessage">
        <group id="RecipientList3" label="宛先リスト" autoScale="true">
          <button id="RecipientListButton3" label="宛先確認" imageMso="ContactProperties" size="large" onAction="RecipientListButton_Click"/>
        </group>
        <group id="ReplayWithAttachments_ReadMessage" insertBeforeMso="GroupRespond" label="返信(添付あり)" autoScale="true">
          <button id="ReplayWithAttachmentsButton_ReadMessage" label="返信" image="Reply.png" size="large" onAction="ReplayWithAttachments_Click"/>
          <button id="ReplayAllWithAttachmentsButton_ReadMessage" label="全員に返信" image="ReplyAll.png" size="large" onAction="ReplayAllWithAttachments_Click"/>
        </group>
      </tab>

    </tabs>

    <!--作成ツールのメッセージタブにボタン設置-->
    <contextualTabs>
      <tabSet idMso="TabComposeTools">
        <tab idMso="TabMessage">
          <group id="RecipientList4" label="宛先リスト" autoScale="true">
            <button id="RecipientListButton4" label="宛先確認" imageMso="ContactProperties" size="large"
                    onAction="RecipientListButton_Click"/>
          </group>
        </tab>
      </tabSet>
    </contextualTabs>

  </ribbon>
</customUI>

